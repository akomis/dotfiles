#!/bin/bash

loadLayout () {
    # Set wallpaper
    feh --bg-scale $WALLPAPER&

    # Start polybar
    . $HOME/.config/polybar/launch.sh&

    #  ws-1
    i3-msg 'workspace 1; append_layout ~/.config/i3/layouts/ws-1.json'
    alacritty --title "w1t1" -e $SHELL -c 'status; $SHELL -i'&
    alacritty --title "w1t2" -e gotop -a -c solarized16-dark&

    #  ws-2
    firefox --class="main" https://akomis.webo.family/index.php/apps/calendar/dayGridMonth/now https://www.youtube.com/feed/subscriptions https://www.reddit.com/&

    #  ws-3
    i3-msg 'workspace 3; append_layout ~/.config/i3/layouts/ws-3.json'
    atom&
    firefox --class="dev" https://github.com/akomis&
    alacritty --title "w3t1" -e $SHELL -c 'cd $CWP; $SHELL -i'&

    #  ws-4
    protonmail-bridge --noninteractive&
    thunderbird&

    #  ws-5
    signal-desktop&

    # ws-6
    joplin-desktop&

    #  ws-9
    alacritty -e cava&

    #  ws-10
    spotify&
}

# Startup programs
picom -b&
dunst -config ~/.config/dunst/dunstrc&
udiskie&
nextcloud --background&

loadLayout && i3-msg 'workspace 1'
