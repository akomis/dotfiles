###############################################################################

[module/weather]
type = custom/script
exec = ~/.config/polybar/polybar-scripts/weather-simple.sh
interval = 600

label = %{T5}%output%

format-foreground = ${colors.primary}
format-background = ${colors.background}
format-underline =

###############################################################################

[module/date]
type = internal/date
interval = 1.0

date = %a %d
time = %H:%M

date-alt = %A %d/%m/%y
time-alt = %H:%M:%S

label = "%{T2}%date%   %time%"
format = <label>

format-foreground = ${colors.primary}
format-background = ${colors.background}
format-underline =

