;https://github.com/jaagr/polybar/wiki/Module:-network
[module/wired-network]
type = internal/network
interface = enp0s31f6
interval = 1

label-connected = "%ifname%"
format-connected-prefix = "  "
format-connected-prefix-foreground = ${colors.primary}
format-connected = <label-connected>
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-underline = ${colors.underline}
format-connected-padding = 0

label-disconnected = "%ifname% disconnected"
format-disconnected-prefix = "  "
format-disconnected-prefix-foreground = ${colors.primary}
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.inactive}
format-disconnected-background = ${colors.background}
format-disconnected-underline = ${colors.underline}


[module/wireless-network]
type = internal/network
interface = wlp4s0
interval = 1

label-connected = "%essid% (%signal%%)"
format-connected-prefix = "  "
format-connected-prefix-foreground = ${colors.primary}
format-connected = <label-connected>
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-underline = ${colors.underline}
format-connected-padding = 0

label-disconnected = "%ifname% disconnected"
format-disconnected-prefix = "  "
format-disconnected-prefix-foreground = ${colors.primary}
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.inactive}
format-disconnected-background = ${colors.background}
format-disconnected-underline = ${colors.underline}

##############################################################################

[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /
;mount-1 = /home
;mount-2 = /mnt/hdd

; Seconds to sleep between updates
; Default: 30
interval = 15

; Display fixed precision values
; Default: false
fixed-values = false

; Spacing between entries
; Default: 2
spacing = 2

; Available tags:
;   <label-mounted> (default)
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
format-mounted = <label-mounted>

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
label-mounted = "%mountpoint% : %free%"
format-mounted-prefix = "  "
format-mounted-prefix-foreground = ${colors.primary}
format-mounted-foreground = ${colors.foreground}
format-mounted-background = ${colors.background}
format-mounted-underline = ${colors.underline}
format-mounted-padding = 0

; Available tokens:
;   %mountpoint%
; Default: %mountpoint% is not mounted
label-unmounted = %mountpoint%
format-unmounted-prefix = " "
format-unmounted-prefix-foreground = ${colors.primary}
format-unmounted-foreground = ${colors.inactive}
format-unmounted-background = ${colors.background}
format-unmounted-underline = ${colors.underline}
format-unmounted-padding = 0

###############################################################################

[module/memory]
type = internal/memory
interval = 1

format = <label>

; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
label = "%percentage_used:02% %"

format-prefix = "  "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.underline}
format-padding = 0

###############################################################################

[module/cpu]
type = internal/cpu
interval = 1

format = <label>
label = "%percentage:02% %"

format-prefix = "  "
format-prefix-foreground = ${colors.primary}
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.underline}
format-padding = 0

###############################################################################

[module/temperature]
type = internal/temperature
interval = 1

units = true;
warn-temperature = 70

label = "%temperature-c% °C   "
format = <ramp> <label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-underline = ${colors.underline}
format-padding = 0

label-warn = "%temperature-c% °C   "
label-warn-foreground = ${colors.alert}
format-warn = <ramp> <label-warn>
format-warn-foreground = ${colors.foreground}
format-warn-background = ${colors.background}
format-warn-underline = ${colors.underline}

ramp-0 = " "
ramp-1 = " "
ramp-2 = " "
ramp-3 = " "
ramp-4 = " "
ramp-foreground = ${colors.primary}

